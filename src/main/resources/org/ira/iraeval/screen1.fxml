<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ira.iraeval.Screen1Controller">
    <children>
        <HBox spacing="0">
            <VBox prefHeight="561.0" prefWidth="715.0" spacing="20.0" style="-fx-padding: 30px;">
                <children>
                    <Label text="Student Subject Evaluator" textFill="#ffffff">
                        <font>
                            <Font name="System Bold" size="22.0" />
                        </font>
                    </Label>
                    <VBox prefHeight="307.0" prefWidth="640.0" spacing="10.0" style="-fx-background-color: #1e1e1e; -fx-padding: 20px; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);">
                        <children>
                            <HBox spacing="10.0">
                                <Label prefWidth="120.0" text="Name:" textFill="#bbbbbb" />
                                <TextField fx:id="nameField" promptText="Enter full name" style="-fx-background-color: #333333; -fx-text-fill: white;" />
                            </HBox>
                            <HBox spacing="10.0">
                                <Label prefWidth="120.0" text="ID Number:" textFill="#bbbbbb" />
                                <TextField fx:id="idNumberField" promptText="Enter ID number" style="-fx-background-color: #333333; -fx-text-fill: white;" />
                            </HBox>
                            <HBox spacing="10.0">
                                <Label prefWidth="120.0" text="New Student:" textFill="#bbbbbb" />
                                <ComboBox fx:id="newStudentComboBox" promptText="Select" style="-fx-background-color: white; -fx-text-fill: white;" />
                            </HBox>
                            <HBox spacing="10.0">
                                <Label prefWidth="120.0" text="Year Level:" textFill="#bbbbbb" />
                                <ComboBox fx:id="yearLevelComboBox" promptText="Select year" style="-fx-background-color: white; -fx-text-fill: #bbbbbb;" disable="true" />
                            </HBox>
                            <HBox spacing="10.0">
                                <Label prefWidth="120.0" text="Semester:" textFill="#bbbbbb" />
                                <ComboBox fx:id="semesterComboBox" promptText="Select semester" style="-fx-background-color: white; -fx-text-fill: #bbbbbb;" disable="true" />
                            </HBox>
                            <HBox spacing="10.0">
                                <Label prefWidth="120.0" text="Recent Subjects:" textFill="#bbbbbb" />
                                <TextField fx:id="subjectsField" disable="true" promptText="Number of subjects" style="-fx-background-color: #333333; -fx-text-fill: white;" />
                            </HBox>
                            <HBox spacing="10.0">
                                <Label prefWidth="120.0" text="Program:" textFill="#bbbbbb" />
                                <ComboBox fx:id="programComboBox" promptText="Select program" style="-fx-background-color: white; -fx-text-fill: #bbbbbb;" />
                            </HBox>
                        </children>
                    </VBox>
                    <HBox alignment="CENTER_RIGHT" spacing="15.0">
                        <children>
                            <Button fx:id="cancelButton" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Cancel" />
                            <Button fx:id="nextButton" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Next" />
                        </children>
                    </HBox>
                </children>
            </VBox>
        </HBox>
    </children>
</VBox>
